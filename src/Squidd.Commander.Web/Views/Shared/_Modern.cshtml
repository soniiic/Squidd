<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    
    <!-- 1. Load libraries -->
    <!-- Polyfill(s) for older browsers -->

    <script src="~/libs/core-js/client/shim.min.js"></script>
    <script src="~/libs/zone.js/dist/zone.js"></script>
    <script src="~/libs/systemjs/dist/system.src.js"></script>

    <!-- 2. Configure SystemJS -->
    <script src="~/Scripts/systemjs.config.js"></script>
    <script>
        System.import('../Scripts/main').catch(function (err)
        {
            console.error(err);
        });
    </script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    @RenderSection("styles", required: false)
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <nav class="left-nav">
                    <p class="site-logo"><img src="~/Images/logo-white.svg" style="width: 100%" /></p>
                    <ul class="list-unstyled">
                        <li class="nav-header">System</li>
                        <li><a href="#">Dashboard</a></li>
                        <li><a href="#">Projects</a></li>
                        <li><a href="#" class="active">Runners</a></li>
                        <li><a href="#">Recent Activity</a></li>
                        <li class="nav-header">Configuration</li>
                        <li><a href="#">Settings</a></li>
                        <li class="nav-header">User</li>
                        <li><a href="#">Dan Cooper</a></li>
                        <li><a href="#">Log Out</a></li>
                    </ul>
                    <hr />
                </nav>
            </div>
            <div class="col-md-9">
                <div class="content-header">
                    <h3>System</h3>
                    @RenderSection("primarybuttons", required: false)
                    <h2>Runners</h2>
                    <hr />
                </div>
                <div class="content-body">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
